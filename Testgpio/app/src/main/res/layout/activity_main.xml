<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval_gradient"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_toLeftOf="@+id/btn_start"
        android:text="Connect" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval_gradient"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:text="Start" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval_gradient"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_toRightOf="@+id/btn_start"
        android:text="Stop" />

    <Button
        android:id="@+id/btn_ledon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_below="@id/btn_connect"
        android:layout_toLeftOf="@id/btn_ledoff"
        android:text="Led On" />

    <Button
        android:id="@+id/btn_ledoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_connect"
        android:text="Led Off" />

    <Button
        android:id="@+id/btn_lcdred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_below="@id/btn_ledon"
        android:text="Red" />

    <Button
        android:id="@+id/btn_lcdgreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_toRightOf="@id/btn_lcdred"
        android:layout_below="@id/btn_ledon"
        android:text="Green" />

    <Button
        android:id="@+id/btn_lcdblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_below="@id/btn_ledon"
        android:layout_toRightOf="@id/btn_lcdgreen"
        android:text="Blue" />

    <Button
        android:id="@+id/btn_lcdyellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_below="@id/btn_ledon"
        android:layout_toRightOf="@id/btn_lcdblue"
        android:text="Yellow" />

    <Button
        android:id="@+id/btn_lcdcyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_below="@id/btn_lcdred"
        android:text="Cyan" />

    <Button
        android:id="@+id/btn_lcdpurple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_toRightOf="@id/btn_lcdcyan"
        android:layout_below="@id/btn_lcdred"
        android:text="Purple" />

    <Button
        android:id="@+id/btn_lcdwhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_below="@id/btn_lcdred"
        android:layout_toRightOf="@id/btn_lcdpurple"
        android:text="white" />

    <Button
        android:id="@+id/btn_lcdblack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:layout_below="@id/btn_lcdred"
        android:layout_toRightOf="@id/btn_lcdwhite"
        android:text="Black" />

    <Button
        android:id="@+id/btn_servoleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_toLeftOf="@+id/btn_servomiddle"
        android:layout_below="@id/btn_lcdcyan"
        android:text="Left" />

    <Button
        android:id="@+id/btn_servomiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_lcdcyan"
        android:text="Middle" />

    <Button
        android:id="@+id/btn_servoright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_oval"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_toRightOf="@+id/btn_servomiddle"
        android:layout_below="@id/btn_lcdcyan"
        android:text="Right" />

    <TextView
        android:id="@+id/tv_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_servoleft"
        android:background="@drawable/mybox"
        android:gravity="bottom"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:text="Log:"
        android:textSize="20dp" />


</RelativeLayout>
